extends ../layouts/layout   

block content
    h1 Cart View
    unless itemCarts
        .row.mt-5.justify-content-center
            .col-sm-6.col-md-6.d-flex.justify-content-center
                p No item in shopping cart
    if itemCarts
        .row.mt-5.justify-content-center
            .col-sm-6.col-md-6.d-flex.justify-content-center
                table.table
                    thead.thead-dark
                        tr
                            th(scope='col') Name
                            th(scope='col') Quantity
                            th(scope='col') Price
                            th(scope='col') Action
                    tbody
                        each itemCart in itemCarts
                            tr
                                td= itemCart.item.name
                                td
                                    span.badge.badge-pill.badge-secondary= itemCart.qty
                                td= itemCart.price
                                td
                                    a.text-success.mx-1(href='#')
                                        i.fas.fa-plus
                                    a.text-secondary.mx-1(href='#')
                                        i.fas.fa-minus
                                    a.text-danger.mx-1(href='#')
                                        i.fas.fa-trash-alt
    
        .row.mt-5.justify-content-end
            .col-sm-6.col-md-4
                strong Total: 
                    span.badge.badge-success= totalPrice
                .border.my-2
                a.btn.btn-success Checkout

